package Q05_ReverseStr;

import java.util.Arrays;
import java.util.Collections;

public class ReverseStr_JeromeAns2 {

	/*
	 * Quiz 05 - 문자열 내림차순으로 배치하기
     * 
     * reverseStr 메소드는 String형 변수 str을 매개변수로 입력받습니다.
     * str에 나타나는 문자를 큰것부터 작은 순으로 정렬해 새로운 String을 리턴해주세요.
     * str는 영문 대소문자로만 구성되어 있으며, 대문자는 소문자보다 작은 것으로 간주합니다.
     * 
     * 예를들어 str이 "Zbcdefg"면 "gfedcbZ"을 리턴하면 됩니다.
	 */
	
	public String reverseStr(String str) {
		String[] strArr = new String[str.length()];
		for (int i=0; i<str.length(); i++) {
			strArr[i] = Character.toString(str.charAt(i));
		}
		System.out.println(Arrays.toString(strArr));
		
//		Arrays.sort(strArr);
//		Collections.reverse(Arrays.asList(strArr));
		
		Arrays.sort(strArr, Collections.reverseOrder());
		System.out.println(Arrays.toString(strArr));
		/*
			String[] strArr = new String[str.length()];
			for (int i=0; i<str.length(); i++) {
				strArr[i] = Character.toString(str.charAt(i));
			}
			System.out.println(Arrays.toString(strArr));
//			String temp = "";
//			for (int i=0; i<strArr.length-1; i++) {
//				if (strArr[i].matches("^[A-Z]*$")) {
//					
//				} else {
//					if(str.charAt(i) < str.charAt(i+1)) {
//						temp = strArr[i];
//						strArr[i] = strArr[i+1];
//						strArr[i+1] = temp;
//					}
//				}
//			}
			Arrays.sort(strArr);
			Collections.reverse(Arrays.asList(strArr));
			System.out.println(Arrays.toString(strArr));
		*/
		return String.join("", strArr);
	}// reverseStr END
	
	// 아래는 테스트로 출력해 보기 위한 코드입니다.
	public static void main(String[] args) {
		ReverseStr_JeromeAns2 rs = new ReverseStr_JeromeAns2();
		System.out.println(rs.reverseStr("Zbcdefg"));
	}// main END
	
}// class END
