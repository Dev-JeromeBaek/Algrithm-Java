package Q13;

import java.util.Scanner;

public class Main {
	
	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		
		int tab = scan.nextInt();
		scan.nextLine();
		int[] intArr = new int[tab];
		for(int i=0; i<tab; i++) {
			intArr[i] = scan.nextInt();
		}
		int result = 0;
		for(int each : intArr) {
			result += each;
		}
		
		System.out.print(result - (tab-1));
	}

}
